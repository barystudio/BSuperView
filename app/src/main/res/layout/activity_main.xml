<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.bary.sample.MainActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="BaryStudio"
        android:textSize="28sp"
        android:textColor="@color/bsv_black"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="BaryStudio"
        android:textSize="28sp"
        android:textColor="@color/bsv_black"
        android:scaleType="centerInside"
        android:src="@drawable/barystudio_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="1、BEditText-通用输入框"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/bsv_black"
            android:background="#ffffff"
            android:onClick="showBEditText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="2、BXXXLayout-各种Layout容器"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/bsv_black"
            android:background="#ffffff"
            android:onClick="showBLinearLayout"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>