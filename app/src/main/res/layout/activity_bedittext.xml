<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.bary.sample.BEditTextActivity">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:text="BaryStudio"
        android:textSize="28sp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="backup"
            android:src="@drawable/back"
            android:textSize="20dp" />

        <View
            android:layout_width="3px"
            android:layout_height="25dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="BEditText 功能展示"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.bary.ui.view.BEditText
            android:id="@+id/mBEditText"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:hint="请输入..."
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:backgroundColor="@color/white"
            app:borderColor="@color/colorPrimary"
            app:shadowAlpha="0.8"
            app:shadowColor="@color/colorPrimary"
            app:shadowDx="0dp"
            app:shadowDy="0dp"
            app:shadowShow="false"
            app:shadowSize="10dp"
            >

        </com.bary.ui.view.BEditText>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="50px">
            <View style="@style/HorizontalLine"/>
            <LinearLayout
                android:id="@+id/roundTitleLayout"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:paddingLeft="45px"
                android:paddingRight="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="圆角属性 :"
                    android:layout_weight="1"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/roundTitleIv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/test_open_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/roundIinfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="45px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="全部圆角 :" />

                    <SeekBar
                        android:id="@+id/skbar_round"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="左上角 :" />

                    <SeekBar
                        android:id="@+id/skbar_round_tl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="右上角 :" />

                    <SeekBar
                        android:id="@+id/skbar_round_tr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="左下角 :" />

                    <SeekBar
                        android:id="@+id/skbar_round_bl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="右下角 :" />

                    <SeekBar
                        android:id="@+id/skbar_round_br"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>


            </LinearLayout>
            <View style="@style/HorizontalLine"/>
            <LinearLayout
                android:id="@+id/borderTitleLayout"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:paddingLeft="45px"
                android:paddingRight="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="描边属性 :"
                    android:layout_weight="1"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/borderTitleIv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/test_open_select" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/borderIinfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="45px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="描边大小 :" />

                    <SeekBar
                        android:id="@+id/skbar_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="隐藏边 :" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="上" />

                    <ImageView
                        android:id="@+id/borderhide_top"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="下" />

                    <ImageView
                        android:id="@+id/borderhide_bottom"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="左" />

                    <ImageView
                        android:id="@+id/borderhide_left"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="右" />

                    <ImageView
                        android:id="@+id/borderhide_right"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginTop="45px"
                android:layout_marginRight="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="显示阴影 :"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/showShadow"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/test_customview_cb_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shadow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="45px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="X轴偏移 :" />

                    <SeekBar
                        android:id="@+id/skbar_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="200"
                        android:progress="100" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Y轴偏移 :" />

                    <SeekBar
                        android:id="@+id/skbar_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="200"
                        android:progress="100" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="扩散区域 :" />

                    <SeekBar
                        android:id="@+id/skbar_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="透明度 :" />

                    <SeekBar
                        android:id="@+id/skbar_alpha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="100" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="颜色值 :" />

                    <com.bary.sample.view.MyColorBar
                        android:id="@+id/skbar_color"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="隐藏边 :" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="上" />

                    <ImageView
                        android:id="@+id/shadowhide_top"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="下" />

                    <ImageView
                        android:id="@+id/shadowhide_bottom"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="左" />

                    <ImageView
                        android:id="@+id/shadowhide_left"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="右" />

                    <ImageView
                        android:id="@+id/shadowhide_right"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@drawable/test_customview_cb_select" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginTop="45px"
                android:layout_marginRight="45px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="显示渐变色背景 :"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/showGradientBg"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/test_customview_cb_select" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gradient_bg_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="45px">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="渐变类型 :" />
                    <RadioGroup
                        android:id="@+id/gradient_bg_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        >
                        <RadioButton
                            android:id="@+id/gradient_bg_type_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线性"
                            android:layout_marginLeft="10dp"
                            android:textColor="#666666"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/gradient_bg_type_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:layout_marginLeft="10dp"
                            android:text="圆环"
                            />
                        <RadioButton
                            android:id="@+id/gradient_bg_type_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:layout_marginLeft="10dp"
                            android:text="角度"
                            />
                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="渐变方向 :" />
                    <RadioGroup
                        android:id="@+id/gradient_bg_orientation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        >
                        <RadioButton
                            android:id="@+id/gradient_bg_orientation_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="水平"
                            android:layout_marginLeft="10dp"
                            android:textColor="#666666"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/gradient_bg_orientation_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:layout_marginLeft="10dp"
                            android:text="垂直"
                            />
                        <RadioButton
                            android:id="@+id/gradient_bg_orientation_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:layout_marginLeft="10dp"
                            android:text="对角"
                            />
                    </RadioGroup>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>