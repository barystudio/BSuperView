<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!--自定义View 公用样式-->
    <!--阴影的圆角大小-->
    <attr name="roundRadius" format="dimension" />
    <attr name="topLeftRadius" format="dimension" />
    <attr name="topRightRadius" format="dimension" />
    <attr name="bottomLeftRadius" format="dimension" />
    <attr name="bottomRightRadius" format="dimension" />
    <attr name="backgroundColor" format="color" />
    <!--下面是否显示阴影-->
    <!--阴影的扩散范围-->
    <attr name="shadowSize" format="dimension" />
    <!--横向阴影的扩散范围-->
    <attr name="shadowXSize" format="dimension" />
    <!--纵向阴影的扩散范围-->
    <attr name="shadowYSize" format="dimension" />
    <!--阴影颜色-->
    <attr name="shadowColor" format="color" />
    <!--阴影透明度-->
    <attr name="shadowAlpha" format="float" />
    <!--x轴的偏移量-->
    <attr name="shadowDx" format="dimension" />
    <!--y轴的偏移量-->
    <attr name="shadowDy" format="dimension" />
    <!--隐藏阴影某些边-->
    <attr name="shadowHideEdges">
        <flag name = "left" value = "1" />
        <flag name = "right" value = "2" />
        <flag name = "top" value = "4" />
        <flag name = "bottom" value = "8" />
    </attr>

    <!--描边的扩散范围-->
    <attr name="borderSize" format="dimension" />
    <!--描边的颜色-->
    <attr name="borderColor" format="color" />
    <!--隐藏描边某些边-->
    <attr name="borderHideEdges">
        <flag name = "left" value = "1" />
        <flag name = "right" value = "2" />
        <flag name = "top" value = "4" />
        <flag name = "bottom" value = "8" />
    </attr>

    <!--文本渐变色颜色-->
    <attr name="textGradientColor" format="string" />
    <!---文本渐变方向-->
    <attr name="textGradientOrientation"  format="enum">
        <enum name = "horizontal" value = "1" />
        <enum name = "vertical" value = "2" />
        <enum name = "diagonal" value = "4" />
    </attr>
    <!---文本渐变类型-->
    <attr name="textGradientType" format="enum">
        <enum name = "linear" value = "1" />
        <enum name = "radial" value = "2" />
        <enum name = "sweep" value = "4" />
    </attr>
    <!--背景渐变色颜色-->
    <attr name="backgroundGradientColor" format="string" />
    <!---背景渐变方向-->
    <attr name="backgroundGradientOrientation"  format="enum">
        <enum name = "horizontal" value = "1" />
        <enum name = "vertical" value = "2" />
        <enum name = "diagonal" value = "4" />
    </attr>
    <!---背景渐变类型-->
    <attr name="backgroundGradientType"  format="enum">
        <enum name = "linear" value = "1" />
        <enum name = "radial" value = "2" />
        <enum name = "sweep" value = "4" />
    </attr>
    <declare-styleable name="BEditText">
        <attr name="backgroundColor" />
        <attr name="backgroundGradientColor" />
        <attr name="backgroundGradientOrientation" />
        <attr name="backgroundGradientType" />
        <attr name="textGradientColor" />
        <attr name="textGradientOrientation" />
        <attr name="textGradientType" />

        <attr name="roundRadius" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />

        <attr name="shadowHideEdges" />
        <attr name="shadowSize" />
        <attr name="shadowXSize" />
        <attr name="shadowYSize" />
        <attr name="shadowColor" />
        <attr name="shadowAlpha" />
        <attr name="shadowDx" />
        <attr name="shadowDy" />

        <attr name="borderSize" />
        <attr name="borderColor" />
        <attr name="borderHideEdges" />
    </declare-styleable>

    <!-- 验证码输入框-->
    <declare-styleable name="BVerifyEditText">
        <!--输入框的数量，默认是4-->
        <attr name="verifyNumber" format="integer" />
        <!--每一个输入框的宽度，默认21dp-->
        <attr name="verifyWidth" format="dimension|reference" />
        <!--输入框之间的分割线-->
        <attr name="verifyDivider" format="reference" />
        <!--输入框文字颜色，默认黑色-->
        <attr name="verifyTextColor" format="color|reference" />
        <!--输入框文字大小，默认16sp-->
        <attr name="verifyTextSize" format="dimension|reference" />
        <!--输入框获取焦点时背景-->
        <attr name="verifyBackgroundFocus" format="reference" />
        <!--输入框没有焦点时背景-->
        <attr name="verifyBackgroundNormal" format="reference" />
        <!--是否是密码模式, 默认是false-->
        <attr name="verifyIsPassword" format="boolean" />
        <!--密码模式时,圆的半径，默认是5dp-->
        <attr name="verifyPasswordRadius" format="dimension|reference" />
    </declare-styleable>
    <attr name="BVerifyEditTextStyle" format="reference" />
</resources>